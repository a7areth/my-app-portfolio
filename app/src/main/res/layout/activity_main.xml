<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="12dp"
    style="@style/AppTheme"
    android:background="#ffdfeaf1"
    >
    <TextView android:text="Udicity Course" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:enabled="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:password="false"
        android:phoneNumber="false"
        android:gravity="center"
        android:fontFamily="Arial" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
       >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSpotifyStreamer"
            android:id="@+id/btnSpotifyStreamer"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:background="#ffff7e1b"
            android:layout_weight="0"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:onClick="buttonsListener" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scores App"
            android:id="@+id/btnScoreApp"
            android:layout_below="@+id/btnSpotifyStreamer"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:background="#ffff7e1b"
            android:layout_weight="0"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:onClick="buttonsListener" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Library APP"
            android:id="@+id/btnLibraryApp"
            android:layout_below="@+id/btnScoreApp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_weight="0"
            android:background="#ffff7e1b"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:onClick="buttonsListener" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bacon Reader"
            android:id="@+id/btnBaconReader"
            android:layout_below="@+id/btnBuildItBigger"
            android:layout_alignLeft="@+id/btnBuildItBigger"
            android:layout_alignStart="@+id/btnBuildItBigger"
            android:textColor="#ffffffff"
            android:background="#ffff7e1b"
            android:focusableInTouchMode="true"
            android:layout_weight="0"
            android:gravity="center"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:onClick="buttonsListener" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build IT bigger"
            android:id="@+id/btnBuildItBigger"
            android:layout_below="@+id/btnLibraryApp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:background="#ffff7e1b"
            android:layout_weight="0"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:clickable="true"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:onClick="buttonsListener" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAstpone: My Own App"
            android:id="@+id/btnCastpone"
            android:layout_below="@+id/btnBaconReader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"
            android:background="#ffc33745"
            android:layout_weight="0"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:onClick="buttonsListener" />
    </LinearLayout>

</RelativeLayout>
